@model List<Actor>

@{
    ViewData["Title"] = "List Of Actors";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <tr class="text-center">
                <th>Profile Picture</th>
                <th>Full Name</th>
                <th>Bio</th>
                <th>Actions</th>
                </tr class="text-center">
            
                @foreach (var item in Model)
                {
                    <tr>
                    <td class="align-middle"><img src="~/img/@item.ProfilePictureURL" class="rounded-circle" alt="@item.FullName" style="width:150px; height:150px" /></td>
                    <td class="align-middle">@item.FullName</td>
                    <td class="align-middle">@item.Bio</td>
                    <td>
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-controller="Actors" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a> |
                        <a class="btn btn-outline-info" asp-controller="Actors" asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye"></i>Details</a> |
                        <a class="btn btn-outline-danger text-black-50" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>Delete</a>
                    </td>
                    </tr>
                }
            
        </table>
    </div>

</div>

<div class="text-white">
    <a asp-action="Create" asp-controller="Actors" class="btn btn-outline-info text-black-50 " ><i class="bi bi-plus-circle"></i>Add New</a>
</div>