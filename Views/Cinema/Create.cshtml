@model Cinema

@{
    ViewData["Title"] = "Create a new Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                The Details of The Cinema
            </h1>
        </p>
        <div>


            <form asp-action="Create">
                <div class="form-group text-center">

                    <img id="ProfilePic" class="border-info rounded-circle" />
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Logo" class="control-label"></label>
                    <input asp-for="Logo" class="form-control" />
                    <span asp-validation-for="Logo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input class="btn btn-outline-success" type="submit" value="Save" />
                    <a asp-action="Index" class="btn btn-outline-primary">Show All</a>
                </div>
            </form>
        </div>
    </div>

</div>

