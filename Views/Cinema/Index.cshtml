@model List<Cinema>

@{ 
    ViewData["Title"] = "List Of Cinemas";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <tr class="text-center">
                <th>Loggo</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>

            @foreach (var item in Model)
            {
        <tr>
            <td class="align-middle"><img src="~/img/@item.Logo" alt="@item.Name" style="width:150px;height:150px" class="rounded-circle" /></td>
            <td class="align-middle">@item.Name</td>
            <td class="align-middle">@item.Description</td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ID"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info"asp-action="Details" asp-route-id="@item.ID"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-outline-danger text-black-50" asp-action="Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i>Delete</a>
            </td>
            
        </tr>
            }    
            </table>
    </div>

</div>

<div>
    <a asp-action="Create" class="btn btn-outline-success">Add New</a>
</div>