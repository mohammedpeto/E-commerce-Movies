@model Producer

@{
    ViewData["Title"] = "Details for an Actor";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>
                Details for the Producer
            </h1>
        </p>
        <div>



            <div class="form-group text-center">

                <img id="ProfilePic" class="border-info rounded-circle" />
            </div>
            <div class="form-group">
                <label asp-for="FullName" class="control-label"></label>
                <input asp-for="FullName" class="form-control" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProfilePictureURL" class="control-label"></label>
                <img src="~/img/@Model.ProfilePictureURL" class="img-thumbnail rounded" style="width:100px; height:100px" />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bio" class="control-label"></label>
                <input asp-for="Bio" class="form-control" readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-outline-secondary float-right">Edit</a>
                <a asp-action="Index"class="btn btn-outline-primary">Show All</a>
            </div>
        </div>
    </div>

</div>

